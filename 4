public class Main {
    public static void main(String[] args) {
      Scanner sc =  new Scanner(System.in);
      System.out.println("Nhập số a: ");
      int a = sc.nextInt();

      System.out.println("Nhập số b: ");
      int b = sc.nextInt();

      int tong = a + b;
      int hieu = a - b;
      int tich = a * b;
      int thuong = a / b;
      int phanDu = a % b;

        System.out.printf("Giá trị a: %d%n", a);
        System.out.printf("Giá trị b: %d%n", b);
        System.out.printf("Tổng của a và b: %d%n", tong);
        System.out.printf("Hiệu của a và b: %d%n", hieu);
        System.out.printf("Tích của a và b: %d%n", tich);
        System.out.printf("Thương của a chia cho b: %d%n", thuong);
        System.out.printf("Phần dư khi chia a cho b: %d%n", phanDu);

    }};
